<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1200.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
 <stylesheets>
     <URL value="@/css/homeEmployee.css" />
 </stylesheets>
  <tabs>
    <Tab text="Filmovi">
      <content>
            <BorderPane>
               <center>
                  <TableView fx:id="tableViewMovies" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="colMovieId" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="colMovieTitle" prefWidth="139.0" text="NAZIV" />
                        <TableColumn fx:id="colMovieDirector" prefWidth="100.0" text="REŽISER" />
                        <TableColumn fx:id="colMovieActors" prefWidth="264.0" text="GLUMCI" />
                        <TableColumn fx:id="colMovieDetailsButton" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="100.0" resizable="false" styleClass="align" />
                    </columns>
                  </TableView>
               </center>
            </BorderPane>
      </content>
    </Tab>
      <Tab text="Serije">
          <content>
              <BorderPane>
                  <center>
                      <TableView fx:id="tableViewSeries" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                          <columns>
                              <TableColumn fx:id="colSerialId" prefWidth="75.0" text="ID" />
                              <TableColumn fx:id="colSerialTitle" prefWidth="139.0" text="NAZIV" />
                              <TableColumn fx:id="colSerialDirector" prefWidth="100.0" text="REŽISER" />
                              <TableColumn fx:id="colSerialActors" prefWidth="264.0" text="GLUMCI" />
                              <TableColumn fx:id="colSerialDetailsButton" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="100.0" resizable="false" styleClass="align" />
                          </columns>
                      </TableView>
                  </center>
              </BorderPane>
          </content>
      </Tab>
      <Tab text="Klijenti">
         <content>
            <TableView fx:id="usersTableView" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colUserId" prefWidth="54.0" text="ID" />
                <TableColumn fx:id="firstNameCol" prefWidth="105.0" text="IME" />
                  <TableColumn fx:id="lastNameCol" prefWidth="126.0" text="PREZIME" />
                  <TableColumn fx:id="usernameCol" prefWidth="102.0" text="USERNAME" />
                  <TableColumn fx:id="roomNumberCol" prefWidth="121.0" text="BROJ SOBE" />
                  <TableColumn fx:id="privilegeCol" prefWidth="105.0" text="PRIVILEGIJE" />
              </columns>
            </TableView>
         </content>
      </Tab>
    <Tab text="Uposlenici">
         <content>
            <TableView fx:id="employeesTableView" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="idEmployeeCol" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="usernameEmployeeCol" prefWidth="99.0" text="USERNAME" />
              </columns>
            </TableView>
         </content>
    </Tab>

  </tabs>
</TabPane>
